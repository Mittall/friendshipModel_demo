<p id="notice"><%= notice %></p>
<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @userdetail.present? %>
      <% @userdetail.each do |user| %>
        <tr>
          <td><img src="/assets/no_image.png" width="30%" height="30%"></td>
          <td><%= user.first_name %> <%= user.last_last %></td>
          <td></td>
          <td><%= link_to 'Accept Request', process_request_path(:uId => user.id, :status => "accept") %></td>
          <td></td>
          <td><%= link_to 'Reject Request', process_request_path(:uId => user.id, :status => "reject") %></td>
        </tr>
      <% end %>
    <% else %>    
      <div>No request found.</div>
    <% end %>
  </tbody>
</table>

